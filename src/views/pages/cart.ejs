<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs", {title:"Index"})%>
  <body>
    <div class="cart-containerWrapper">
      <div class="cart-containerWrapper-partials">
        <%- include('../partials/navbar', noSearchBox) %>
        <main class="cart-container">
          <a class="breadcrumb" onclick="history.back()">Volver</a>
          <h1>Productos en tu carrito</h1>
          <div class="cart-list"></div>

          <div class="cart-total-container">
            <p>Total de Puntos</p>
            <span class="total-price"></span>
          </div>
          <div class="button-container">
            <form action="/checkout" method="get">
              <button class="section-product-detail__button">Ir a pagar</button>
            </form>
          </div>
        </main>
        <div class="main--partials-container">
          <div
            class="product-list--cards"
            style="
              margin-left: auto;
              width: 90%;
              margin-right: auto;
              max-width: 1024px;
              margin-bottom: 5rem;
            "
          >
            <div class="product-list--h">
              <h3>Los m√°s pedidos</h3>
            </div>
            <% for(i=0;i<=3;i++){%> <%-include("../partials/productCard.ejs",
            {"product":mostPopular[i]})%> <% } %>
          </div>
        </div>
      </div>
      <%- include("../partials/footer.ejs")%>
    </div>
  </body>
</html>
