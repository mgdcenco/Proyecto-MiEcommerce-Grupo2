<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs", {title:"Index"})%>

  <body>
      <% if (!error){ %>
        <%- include('../partials/navbar' ,noSearchBox) %>
        <main class="main--partials">
            <div class="main--partials-container">
                <div class="breadcrumb">
                    <a class="" href="/">Volver al listado</a
                        ><a href="/category/<%=product.category%>" class=""><%=product.category%></a>
                    </div>
                    <section class="section-product-detail">
                        <div class="section-product-detail__images">
                            <div class="section-product-detail__images-banner">
                                <img src="<%=product.images[0]%>" alt="" />
                            </div>
                            <div class="section-product-detail__images-collection">
                                <%if(product.images.length>2){ %>
                                    <img src="<%=product.images[1]%>" alt="<%=product.title%>" />
                                    <img src="<%=product.images[0]%>" alt="<%=product.title%>" />
                                    <img src="<%=product.images[2]%>" alt="<%=product.title%>" />
                                    <%}else if(product.images.length===2){ %>
                                        <img src="<%=product.images[0]%>" alt="<%=product.title%>" />
                                        <img src="<%=product.images[1]%>" alt="<%=product.title%>" />
                                        <%} else{%>
                                            <img src="<%=product.images[0]%>" alt="<%=product.title%>" />
                                            <%}%>
                                        </div>
                                    </div>
                                    <div class="section-product-detail__description">
                                        <h2><%=product.title%></h2>
                                        <h3 class="section-product-detail__description-price">
                                            <%=product.price%> <span>PUNTOS</span>
                                        </h3>
                                        <p><%=product.description%></p>
                                        <button class="section-product-detail__button"><a href="/cart">
                                            Agregar al carrito</a>
                                        </button>
                                    </div>
                                </section>
                                <h3 class="section-product-detail__description_h3">Tambi√©n te puede interesar</h3>
                                <div class="product-list--cards">
                                    <% for(i=0;i<=3;i++){%> <%-include("../partials/productCard.ejs",
          {"product":productsByCategory[i]})%> <% } %>
        </div>
        <section class="category-2">
        <%-include("../partials/category.ejs")%>
        </section>
        
    </div>
</main>
<%} else {%> 
    <%- include("../partials/error.ejs", {prod:true}) %> <% }%>
<%-include("../partials/footer.ejs")%>
  </body>
</html>
